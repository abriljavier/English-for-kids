<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_principal">


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="360dp"
        android:layout_height="104dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="440dp"
        android:scrollbarSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backButton2"
        android:layout_width="146dp"
        android:layout_height="146dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="509dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="@color/fondo_principal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_yellow" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="326dp"
        android:layout_height="87dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="576dp"
        android:fontFamily="@font/atma"
        android:gravity="center"
        android:text="Please select you name in the player's list"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/continueGameButton"
        android:layout_width="146dp"
        android:layout_height="146dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="147dp"
        android:backgroundTint="@color/fondo_principal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/forward_yellow" />
</androidx.constraintlayout.widget.ConstraintLayout>
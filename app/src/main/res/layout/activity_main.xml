<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_principal"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar" />

    <ImageButton
        android:id="@+id/createPlayerButton"
        android:layout_width="136dp"
        android:layout_height="114dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="313dp"
        android:src="@drawable/create_user" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="215dp"
        android:layout_height="61dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="569dp"
        android:gravity="center"
        android:text="WELCOME!"
        android:textColor="@color/texto_principal"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="289dp"
        android:layout_height="59dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="510dp"
        android:gravity="center"
        android:text="Please select one option!"
        android:textColor="@color/texto_principal"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="435dp"
        android:text="Create new player"
        android:textColor="@color/texto_principal"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/continueGameButton"
        android:layout_width="136dp"
        android:layout_height="114dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="97dp"
        android:src="@drawable/continue_user" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="149dp"
        android:layout_height="32dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="474dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="225dp"
        android:gravity="center"
        android:text="Continue"
        android:textColor="@color/texto_principal"
        android:textSize="20sp" />


</RelativeLayout>